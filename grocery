#include <stdio.h>
 
int main()
{
    struct date
    {
        int day;
        int month;
        int year;
    };
    struct details
    {
        char name[20];
        int price;
        int quantity;
        struct date mfg;
    };
    struct details item[50];
    int n, i;
 
    printf("Enter number of items:");
    scanf("%d", &n);
    fflush(stdin);
    for (i = 0; i < n; i++)
    {
        fflush(stdin);
        printf("Item name: \n");
        scanf("%s",item[i].name);
        fflush(stdin);
        printf("Quantity: \n");
        scanf("%d",&item[i].quantity);
        fflush(stdin);
        printf("Price: \n");
        scanf("%d",&item[i].price);
        fflush(stdin);
        printf("Manufacturing date(dd-mm-yyyy): \n");
        scanf("%d-%d-%d", &item[i].mfg.day,
        &item[i].mfg.month, &item[i].mfg.year);
    }
    printf("                         *****  INVENTORY  *****                  \n");
    printf("------------------------------------------------------------------\n");
    printf("S.N.|          NAME           |  QUANTITY   |  PRICE |   MFG.DATE \n");
    printf("------------------------------------------------------------------\n");
    for (i = 0; i < n; i++)
    printf("%d     %-15s             %-5d         %-5d  %d/%d/%d \n", i + 1, item[i].name, item[i].quantity ,item[i].price, item[i].mfg.day, item[i].mfg.month, item[i].mfg.year);
    printf("------------------------------------------------------------------\n");

return 0;
}
